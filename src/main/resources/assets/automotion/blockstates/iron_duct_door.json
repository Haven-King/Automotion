{
  "multipart": [
    {
      "when": {"facing": "north", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open"}
    },
    {
      "when": {"facing": "north", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed"}
    },

    {
      "when": {"facing": "south", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open", "y": 180}
    },
    {
      "when": {"facing": "south", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed", "y": 180}
    },

    {
      "when": {"facing": "east", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open", "y": 90}
    },
    {
      "when": {"facing": "east", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed", "y": 90}
    },

    {
      "when": {"facing": "west", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open","y": 270}
    },
    {
      "when": {"facing": "west", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed","y": 270}
    },

    {
      "when": {"facing": "up", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open", "x": 270}
    },
    {
      "when": {"facing": "up", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed", "x": 270}
    },

    {
      "when": {"facing": "down", "open": "true"},
      "apply": {"model": "automotion:block/iron_duct_door_open", "x": 90}
    },
    {
      "when": {"facing": "down", "open": "false"},
      "apply": {"model": "automotion:block/iron_duct_door_closed", "x": 90}
    }
  ]
}