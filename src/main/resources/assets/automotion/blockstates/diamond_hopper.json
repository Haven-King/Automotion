{
  "multipart": [
    {
      "apply": {"model": "automotion:block/diamond_hopper"}
    },

    {
      "when": {"north": "true"},
      "apply": {"model": "automotion:block/diamond_hopper_side"}
    },

    {
      "when": {"south": "true"},
      "apply": {"model": "automotion:block/diamond_hopper_side", "y": 180}
    },

    {
      "when": {"east": "true"},
      "apply": {"model": "automotion:block/diamond_hopper_side", "y": 90}
    },

    {
      "when": {"west": "true"},
      "apply": {"model": "automotion:block/diamond_hopper_side", "y": 270}
    },

    {
      "when": {"down": "true"},
      "apply": {"model": "automotion:block/diamond_hopper_bottom"}
    }
  ]
}